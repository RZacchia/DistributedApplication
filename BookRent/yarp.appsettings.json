{
  "ReverseProxy": {
    "Routes": {
      "catalog": {
        "ClusterId": "catalog",
        "Match": {
          "Path": "/catalog/{**catch-all}"
        }
      },
      "renting": {
        "ClusterId": "renting",
        "Match": {
          "Path": "/renting/{**catch-all}"
        }
      },
      "user": {
        "ClusterId": "user",
        "Match": {
          "Path": "/user/{**catch-all}"
        }
      },
      "identity": {
        "ClusterId": "identity",
        "Match": {
          "Path": "/identity/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "catalog": {
        "Destinations": {
          "d1": {
            "Address": "http://catalog-api:8080/"
          }
        }
      },
      "renting": {
        "Destinations": {
          "d1": {
            "Address": "http://renting-api:8080/"
          }
        }
      },
      "user": {
        "Destinations": {
          "d1": {
            "Address": "http://user-api:8080/"
          }
        }
      },
      "identity": {
        "Destinations": {
          "d1": {
            "Address": "http://identity:8080/"
          }
        }
      }
    }
  }
}